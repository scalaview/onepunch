<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
          Flow Histories
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Phone</th>
                <th>Name</th>
                <th>Remaining Traffic</th>
                <th>Last Login</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              {{#each customers.rows}}
                <tr>
                    <td>{{ phone }}</td>
                    <td>{{ name }}</td>
                    <td>{{ strftime lastLoginAt "YYYY-MM-DD" }}</td>
                    <td>{{ remainingTraffic }}</td>
                    <td>
                      <a href="/admin/customers/{{id}}/edit" class="list-group-item">
                        <i class="glyphicon glyphicon-pencil"></i>
                      </a>
                    </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        <!-- /.table-responsive -->
      </div>

      <div class="panel-footer">
          {{pagination customers '/admin/customers'}}
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
</div>