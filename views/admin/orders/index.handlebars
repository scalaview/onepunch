<hr>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
          商家
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>用户</th>
                <th>电话</th>
                <th>状态</th>
                <th>获得</th>
                <th>支付方式</th>
                <th>金额</th>
                <th>创建时间</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              {{#each orders.rows }}
                <tr>
                    <td>{{ customer.name }}</td>
                    <td>{{ customer.phone }}</td>
                    <td>{{ stateName }}</td>
                    <td>
                      {{ dataPlan.name }}
                    </td>
                    <td>{{ paymentMethod.name }}</td>
                    <td>{{ total }}</td>
                    <td>{{ strftime createdAt }}</td>
                    <td>
                      <a href="/admin/orders/{{id}}" class="list-group-item">
                        <i class="glyphicon glyphicon-pencil"></i>
                      </a>
                    </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        <!-- /.table-responsive -->

      </div>

      <div class="panel-footer">
          {{pagination orders '/admin/orders'}}
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
</div>