<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        用户管理
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                  <th>手机</th>
                  <th>用户</th>
                  <th>一级用户</th>
                  <th>二级用户</th>
                  <th>三级用户</th>
                  <th>一级贡献</th>
                  <th>二级贡献</th>
                  <th>三级贡献</th>
              </tr>
            </thead>
            <tbody>
              {{#each customers.rows}}
                <tr>
                    <td>{{ phone }}</td>
                    <td><img src="{{headimgurl}}" style="width: 36px;">{{ username }}</td>
                    <td>{{#if parent_0 }} <img src="{{ parent_0.headimgurl }}" style="width: 36px;">{{ parent_0.username }} {{/if}}</td>
                    <td>{{#if parent_1 }} <img src="{{ parent_1.headimgurl }}" style="width: 36px;">{{ parent_1.username }} {{/if}}</td>
                    <td>{{#if parent_2 }} <img src="{{ parent_2.headimgurl }}" style="width: 36px;">{{ parent_2.username }} {{/if}}</td>
                    <td>{{#if parent_sum_0}}  {{parent_sum_0}} {{else}} 0 {{/if}}E币</td>
                    <td>{{#if parent_sum_1}}  {{parent_sum_1}} {{else}} 0 {{/if}}E币</td>
                    <td>{{#if parent_sum_2}}  {{parent_sum_2}} {{else}} 0 {{/if}}E币</td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        <!-- /.table-responsive -->
      </div>

      <div class="panel-footer">
          {{pagination customers (addParams '/admin/customers' query)}}
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
</div>