<div class="row">
  <div class='col-lg-2 pull-right'>
    <a href="/admin/customers/new">
      <button class="btn btn-primary col-lg-12 btn-large">
        <i class="glyphicon glyphicon-plus"></i> 新建
      </button>
    </a>
  </div>
</div>
<hr>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
          Customers
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                  <th>Phone</th>
                  <th>Name</th>
                  <th>Remaining Traffic</th>
                  <th>Last Login</th>
                  <th>Action</th>
              </tr>
            </thead>
            <tbody>
              {{#each customers.rows}}
                <tr>
                    <td>{{ phone }}</td>
                    <td>{{ name }}</td>
                    <td>{{ strftime lastLoginAt "YYYY-MM-DD" }}</td>
                    <td>{{ remainingTraffic }}</td>
                    <td>
                      <a href="/admin/customers/{{id}}" class="list-group-item">
                        <i class="glyphicon glyphicon-pencil"></i>
                      </a>
                    </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        <!-- /.table-responsive -->
      </div>

      <div class="panel-footer">
          {{pagination customers (addParams '/admin/customers' query)}}
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
</div>