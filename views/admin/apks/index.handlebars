<div class="row">
  <div class='col-lg-2 pull-right'>
    <a href="/admin/apks/new">
      <button class="btn btn-primary col-lg-12 btn-large">
        <i class="glyphicon glyphicon-plus"></i> 新建
      </button>
    </a>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
          Apks
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                  <th>Name</th>
                  <th>Seller</th>
                  <th>Size</th>
                  <th>DownloadTime</th>
                  <th>is Active</th>
                  <th>Action</th>
              </tr>
            </thead>
            <tbody>
              {{#each apks.rows}}
                <tr>
                  <td>{{ name }}</td>
                  <td>{{ seller.name }}</td>
                  <td>{{ sizeFormat apkSize }}</td>
                  <td>{{ downloadTime }}</td>
                  <td>{{ isActive }}</td>
                  <td>
                    <a href="/admin/apks/{{id}}/edit" class="list-group-item">
                      <i class="glyphicon glyphicon-pencil"></i>
                    </a>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        <!-- /.table-responsive -->
      </div>
      <!-- /.panel-body -->
      <div class="panel-footer">
          {{pagination apks (addParams '/admin/apks' query)}}
      </div>
    </div>
      <!-- /.panel -->
  </div>
</div>