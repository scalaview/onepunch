<div class='container-fluid'>
  <div class="row">
      <div class="col-lg-12">
          <h1 class="page-header">Flow Stask</h1>
      </div>
  </div>

<form role="form" accept-charset="UTF-8" enctype="multipart/form-data" action="/admin/apks" method="post">
  <div class='row'>
    <div class="col-lg-6">

        <div class="form-group">
            <label>Name</label>
            <input class="form-control" placeholder="input title" name="name" value="{{ name }}">
            <p class="help-block">Example block-level help text here.</p>
        </div>
        <div class='row'>
          <div class="col-lg-6">
            <div class="form-group">
                <label>version</label>
                <input class="form-control" placeholder="input version" name="version" value="{{ version }}">
                <p class="help-block">Example block-level help text here.</p>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="checkbox">
              <label>
                  <input type="checkbox" name="isActive" value="{{ isActive }}">is active
              </label>
            </div>
          </div>
        </div>
    </div>
    <div class="col-lg-6">
      <div class="form-group">
            <label>Seller</label>
            <input class="form-control" placeholder="input seller" name="sellerId" value="{{ sellerId }}">
      </div>
      <div class="form-group">
            <label>Reward</label>
            <input class="form-control" placeholder="input reward" name="reward" value="{{ reward }}">
            <p class="help-block">Example block-level help text here.</p>
        </div>
      <div class="form-group">
        <label>Digest</label>
        <input class="form-control" placeholder="input digest" name="digest" value="{{ digest }}">
        <p class="help-block">Example block-level help text here.</p>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6">
      <div class="form-group">
        <label>Sort Num</label>
        <input class="form-control" placeholder="input sor num" name="sortNum" value="{{ sortNum }}">
      </div>
      <div class="form-group">
        <label>Apk</label>
        <input class="form-control" placeholder="input Apk" type="file" name="apk" value="{{ apk }}">
        {{#if apkPath}}
        <p class="help-block">
          <a href="{{ apkPath }}">{{ apk }}</a>
        </p>
        {{/if}}
      </div>
      <div class="form-group">
        <label>Icon</label>
        <input class="form-control" placeholder="input Icon" type="file" name="icon" value="{{ icon }}">
        {{#if icon}}
          <p class="help-block">
            <img class="img-responsive" src="{{ icon }}">
          </p>
        {{/if}}
        </div>
    </div>

    <div class="col-lg-6">
      <div class="form-group">
        <label>Screenshort 01</label>
        <input class="form-control" placeholder="input screenshort" type="file" name="image01" value="{{ image01 }}">
        {{#if image01}}
          <p class="help-block">
            <img class="img-responsive" src="{{ image01 }}">
          </p>
        {{/if}}
      </div>
       <div class="form-group">
        <label>Screenshort 02</label>
        <input class="form-control" placeholder="input screenshort" type="file" name="image02" value="{{ image02 }}">
        {{#if image02}}
          <p class="help-block">
            <img class="img-responsive" src="{{ image02 }}">
          </p>
        {{/if}}
      </div>
      <div class="form-group">
        <label>Screenshort 03</label>
        <input class="form-control" placeholder="input screenshort" type="file" name="image03" value="{{ image03 }}">
        {{#if image03}}
          <p class="help-block">
            <img class="img-responsive" src="{{ image03 }}">
          </p>
        {{/if}}
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">

      <div class="form-group">
          <label>Description</label>
          <textarea class="form-control kindeditor" id="description" name="description" rows="3"></textarea>
          <p class="help-block">Example block-level help text here.</p>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-11">
      <button type="submit" class="pull-right btn btn-primary">Submit Button</button>
    </div>
  </div>

</form>

</div>

<script type="text/javascript">
$(document).ready(function(){
  KindEditor.ready(function(K) {
      return K.create("#description", {
          "class": ["kindeditor", "optional"],
          width: "100%",
          height: 300,
          allowFileManager: true,
          uploadJson: '',
          fileManagerJson: ''
      });
  });
})
</script>