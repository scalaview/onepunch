<hr>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
          短信列表
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                  <th>手机号码</th>
                  <th>短信摘要</th>
                  <th>类型</th>
                  <th>状态</th>
                  <th>验证码</th>
                  <th>重试次数</th>
                  <th>发送时间</th>
              </tr>
            </thead>
            <tbody>
              {{#each messagequeues.rows }}
                <tr>
                    <td>{{ phone }}</td>
                    <td>{{ content }}</td>
                    <td>{{ typeName }}</td>
                    <td>{{ stateName }}</td>
                    <td>{{ verificationCode }}</td>
                    <td>{{ retryTime }}</td>
                    <td>{{ strftime sendAt }}</td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        <!-- /.table-responsive -->

      </div>

      <div class="panel-footer">
          {{pagination messagequeues '/admin/messagequeues'}}
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
</div>