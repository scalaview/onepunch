<div class="row">
  <div class='col-lg-2 pull-right'>
    <a href="/admin/flowtasks/new">
      <button class="btn btn-primary col-lg-12 btn-large">
        <i class="glyphicon glyphicon-plus"></i> 新建
      </button>
    </a>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
          FlowTasks
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                  <th>Title</th>
                  <th>Seller</th>
                  <th>Reward</th>
                  <th>Sort </th>
                  <th>Finish Time</th>
                  <th>Active</th>
                  <th>Expired At</th>
                  <th>Action</th>
              </tr>
            </thead>
            <tbody>
              {{#each flowtasks.rows }}
                <tr>
                    <td>{{ title }}</td>
                    <td>{{ seller.name }}</td>
                    <td>{{ trafficPlan.name }}</td>
                    <td>{{ sortNum }}</td>
                    <td>{{ finishTime }}</td>
                    <td>{{ isActive }}</td>
                    <td>{{ strftime expiredAt }}</td>
                    <td>
                      <a href="/admin/flowtasks/{{id}}/edit" class="list-group-item">
                        <i class="glyphicon glyphicon-pencil"></i>
                      </a>
                    </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        <!-- /.table-responsive -->

      </div>

      <div class="panel-footer">
          {{pagination flowtasks '/admin/flowtasks'}}
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
</div>