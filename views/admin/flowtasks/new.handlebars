<div class='container-fluid'>
  <div class="row">
      <div class="col-lg-12">
          <h1 class="page-header">Flow Stask</h1>
      </div>
  </div>

<form role="form" accept-charset="UTF-8" enctype="multipart/form-data" action="/admin/flowtask" method="post">
  <div class='row'>
    <div class="col-lg-6">

        <div class="form-group">
            <label>Title</label>
            <input class="form-control" placeholder="input title" name="title">
            <p class="help-block">Example block-level help text here.</p>
        </div>
        <div class='row'>
          <div class="col-lg-6">
            <div class="form-group">
                <label>expired at</label>
                <input class="form-control" placeholder="input expired at" id="expired_at" name="expired_at">
                <p class="help-block">Example block-level help text here.</p>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="checkbox">
              <label>
                  <input type="checkbox" name="is_active" value="1">is active
              </label>
            </div>
          </div>
        </div>
    </div>
    <div class="col-lg-6">
      <div class="form-group">
            <label>sort num</label>
            <input class="form-control" placeholder="input sort num" name="sort_num">
      </div>
      <div class="form-group">
            <label>Cover</label>
            <input class="form-control" placeholder="input cover" type="file" name="cover">
            <p class="help-block">Example block-level help text here.</p>
        </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">

      <div class="form-group">
          <label>Content</label>
          <textarea class="form-control kindeditor" id="content" name="content" rows="3"></textarea>
          <p class="help-block">Example block-level help text here.</p>
      </div>
    </div>
  </div>

  <button type="submit" class="btn btn-default">Submit Button</button>
</form>

</div>

<script type="text/javascript">
$(document).ready(function(){
  $('#expired_at').datepicker({
    format: "yyyy-mm-dd"
  });
  KindEditor.ready(function(K) {
      return K.create("#content", {
          "class": ["kindeditor", "optional"],
          width: "100%",
          height: 300,
          allowFileManager: true,
          uploadJson: '',
          fileManagerJson: ''
      });
  });
})
</script>