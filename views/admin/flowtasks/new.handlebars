<div class='container-fluid'>
  <div class="row">
      <div class="col-lg-12">
          <h1 class="page-header">Flow Stask</h1>
      </div>
  </div>

  <div class='row'>
    <div class="col-lg-6">
      <form role="form">
        <div class="form-group">
            <label>Title</label>
            <input class="form-control" placeholder="input title" name="title">
            <p class="help-block">Example block-level help text here.</p>
        </div>
        <div class="form-group">
            <label>Cover</label>
            <input class="form-control" placeholder="input title" type="file" name="title">
            <p class="help-block">Example block-level help text here.</p>
        </div>
          <div class="form-group">
              <label>Content</label>
              <textarea class="form-control kindeditor" id="content" name="content" rows="3"></textarea>
              <p class="help-block">Example block-level help text here.</p>
          </div>

      </form>
    </div>
  </div>
</div>

<script type="text/javascript">
    KindEditor.ready(function(K) {
        return K.create("#content", {
            "class": ["kindeditor", "optional"],
            width: "100%",
            height: 300,
            allowFileManager: true,
            uploadJson: '<%= "#{SUBSITES_URL["console"]}/kindeditor/upload" %>',
            fileManagerJson: '<%= "#{SUBSITES_URL["console"]}/kindeditor/filemanager" %>'
        });
    });
</script>