<div class='container-fluid'>
  <div class="row">
      <div class="col-lg-12">
          <h1 class="page-header">Coupons</h1>
      </div>
  </div>

<form role="form" accept-charset="UTF-8" action="{{path}}" method="{{method}}">
  <div class='row'>
    <div class="col-lg-6">
      <div class="form-group">
          <label>名字</label>
          <input class="form-control" placeholder="input name" name="name" value="{{ coupon.name }}">
      </div>

      <div class="form-group">
        <label>discount</label>
        <input class="form-control" placeholder="input discount" name="discount" type='number'  min="0" max="1"  step='0.01' value="{{ coupon.discount }}">
      </div>

      <div class='row'>
        <div class="col-lg-6">
          <div class="checkbox" style="padding-top: 20px;">
            <label>
                <input type="checkbox" name="isActive" {{ isChecked coupon.isActive }}>is active
            </label>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="checkbox" style="padding-top: 20px;">
            <label>
                <input type="checkbox" name="ignoreLevel" {{ isChecked coupon.ignoreLevel }}>ignoreLevel
            </label>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="form-group">
        <label>套餐</label>
        {{ selectTag dataPlanOptions dataPlanCollection coupon.dataPlanId }}
      </div>
      <div class="form-group">
        <label>extend</label>
        <input class="form-control" placeholder="input extend" name="extend" value="{{ coupon.extend }}">
      </div>
      <div class="form-group">
        <label>expiredAt</label>
        <input class="form-control" placeholder="input expiredAt" id="expired_at" name="expiredAt" value="{{ strftime coupon.expiredAt 'YYYY-MM-DD' }}">
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-11">
      <button type="submit" class="pull-right btn btn-primary">提  交</button>
    </div>
  </div>

</form>

</div>
