<div class='container-fluid'>
  <div class="row">
    <div class="col-lg-12 col-xs-12">
        <h1 class="page-header">Flow Stask</h1>
    </div>
  </div>

<form role="form" accept-charset="UTF-8" enctype="multipart/form-data" action="{{action}}" method="{{method}}">
{{#unless flowtask.isNewRecord }}
  <div class="row">
    <div class="col-lg-12">
      <div class="form-group">
        <label>商家回调url</label>
        <input class="form-control" disabled value="http://yiliuliang.net/taskconfirm/{{flowtask.id}}?token={{flowtask.seller.accessToken}}">
      </div>
    </div>
  </div>
{{/unless}}
  <div class='row'>
    <div class="col-lg-6">

        <div class="form-group">
            <label>标题</label>
            <input class="form-control" placeholder="请输入标题" name="title" value="{{ flowtask.title }}">
            <p class="help-block">Example block-level help text here.</p>
        </div>
        <div class='row'>
          <div class="col-lg-6">
            <div class="form-group">
                <label>expired at</label>
                <input class="form-control" placeholder="input expired at" id="expired_at" name="expired_at" value="{{ strftime flowtask.expired_at 'YYYY-MM-DD' }}">
                <p class="help-block">Example block-level help text here.</p>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="checkbox">
              <label>
                  <input type="checkbox" name="is_active" {{ isChecked flowtask.isActive  }} >is active
              </label>
            </div>
          </div>
        </div>

        <div class="form-group">
            <label>Action Url</label>
            <input class="form-control" placeholder="input sort action url" name="actionUrl" value="{{ flowtask.actionUrl }}">
        </div>
    </div>
    <div class="col-lg-6">
      <div class="form-group">
            <label>Seller</label>
            {{ selectTag sellerOptions sellerCollection flowtask.seller_id }}
      </div>

      <div class="form-group">
        <label>Traffic Plan</label>
            {{ selectTag trafficPlanOptions trafficPlanCollection flowtask.trafficPlanId }}

      </div>

      <div class="form-group">
            <label>sort num</label>
            <input class="form-control" placeholder="input sort num" name="sort_num" value="{{ flowtask.sort_num }}">
      </div>
      <div class="form-group">
            <label>Cover</label>
            <input class="form-control" placeholder="input cover" type="file" name="cover" value="{{ flowtask.cover }}">
            {{#if flowtask.cover }}
              <p class="help-block">
                <img class="col-lg-8 col-lg-offset-2 img-responsive" src="{{ flowtask.cover }}">
              </p>
            {{/if}}
        </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">

      <div class="form-group">
          <label>Content</label>
          <textarea class="form-control kindeditor" id="content" name="content" rows="3">{{ flowtask.content }}</textarea>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-11">
      <button type="submit" class="pull-right btn btn-primary">Submit Button</button>
    </div>
  </div>
</form>

</div>