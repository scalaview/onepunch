<div class='container-fluid'>
  <div class="row">
      <div class="col-lg-12">
          <h1 class="page-header">Flow Stask</h1>
      </div>
  </div>

<form role="form" accept-charset="UTF-8" enctype="multipart/form-data" action="{{action}}" method="{{method}}">
  <div class='row'>
    <div class="col-lg-6">

        <div class="form-group">
            <label>Title</label>
            <input class="form-control" placeholder="input title" name="title" value="{{ flowtask.title }}">
            <p class="help-block">Example block-level help text here.</p>
        </div>
        <div class='row'>
          <div class="col-lg-6">
            <div class="form-group">
                <label>expired at</label>
                <input class="form-control" placeholder="input expired at" id="expired_at" name="expired_at" value="{{ strftime flowtask.expired_at 'YYYY-MM-DD' }}">
                <p class="help-block">Example block-level help text here.</p>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="checkbox">
              <label>
                  <input type="checkbox" name="is_active" {{ isChecked flowtask.isActive  }} >is active
              </label>
            </div>
          </div>
        </div>

        <div class="form-group">
            <label>Action Url</label>
            <input class="form-control" placeholder="input sort action url" name="actionUrl" value="{{ flowtask.actionUrl }}">
        </div>
    </div>
    <div class="col-lg-6">
      <div class="form-group">
            <label>Seller</label>
            {{ selectTag sellerOptions sellerCollection flowtask.seller_id }}
      </div>

      <div class="form-group">
        <label>Traffic Plan</label>
            {{ selectTag trafficPlanOptions trafficPlanCollection flowtask.trafficPlanId }}

      </div>

      <div class="form-group">
            <label>sort num</label>
            <input class="form-control" placeholder="input sort num" name="sort_num" value="{{ flowtask.sort_num }}">
      </div>
      <div class="form-group">
            <label>Cover</label>
            <input class="form-control" placeholder="input cover" type="file" name="cover" value="{{ flowtask.cover }}">
            {{#if flowtask.cover }}
              <p class="help-block">
                <img class="img-responsive" src="{{ flowtask.cover }}">
              </p>
            {{/if}}
        </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">

      <div class="form-group">
          <label>Content</label>
          <textarea class="form-control kindeditor" id="content" name="content" rows="3">{{ flowtask.content }}</textarea>
          <p class="help-block">Example block-level help text here.</p>
      </div>
    </div>
  </div>

  <button type="submit" class="btn btn-default">Submit Button</button>
</form>

</div>

{{#section 'javascript'}}
    <script type="text/javascript">
    $(document).ready(function(){

      $('#expired_at').datepicker({
        startDate: new Date(),
        format: "yyyy-mm-dd"
      });
      KindEditor.ready(function(K) {
          return K.create("#content", {
              "class": ["kindeditor", "optional"],
              width: "100%",
              height: 300,
              allowFileManager: true,
              uploadJson: '/public/kindeditor/uploads',
              fileManagerJson: '/public/kindeditor/filemanager'
          });
      });
    })
  </script>
{{/section}}