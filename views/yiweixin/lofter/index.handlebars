<div class="g-body">
  {{#each movies.rows }}
    <div class="g-mdl">
      <div class="g-bd">
        <div class="g-bdc">
          <div class="g-bdcc">
            <div class="g-bdc">
              <a href="{{#if bilibiliMovie.id}}/lofter/{{bilibiliMovie.id}}{{else}}/movie/{{id}}{{/if}}">
                <div class="g-bdcc">
                  <div class="m-photo m-photo-full img-responsive">
                    <div class="photo">
                      <img src="{{cover.large}}" onerror="this.src='http://www.lofter.com/mobile/src/images/defaultphoto.png';">
                    </div>
                  </div>
                  <div class="m-cnt">
                    <h2 class="title">{{title}}</h2>
                    <div class="text">
                       <div class="ztag">
                          <blockquote>
                             <p>{{ subSummary summary 100}}</p>
                          </blockquote>
                       </div>
                    </div>
                  </div>
                  <div class="m-oprt">
                    <div class="tags">
                      <span class="w-icn w-icn-bq">标签：</span>
                      {{#each genres }}
                        <a href="#">{{name}}</a>
                      {{/each}}
                    </div>
                    <div class="oprt">
                      <div class="oprta">
                        <em>
                          <a>热度({{ ratings_count }})</a>
                        </em>
                      </div>
                      <div class="oprtb">
                        <em>
                          <a class="w-icn w-icn-zz">转载</a>
                        </em>
                      </div>
                    </div>
                  </div>
                </div>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
</div>

{{> toast }}