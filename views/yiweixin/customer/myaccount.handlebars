<div class="container dtb_distribution">
  <div class='row'>
     <div class="item uinfo col-xs-12">
        <img src="{{ customer.headimgurl }}" onError="this.src='http://placehold.it/380x380';" class="img-rounded img-responsive">
        <div class="info">
           <h5>{{ customer.username }}</h5>
           <p><small>关注时间： {{ strftime customer.subscribeTime "YYYY-MM-DD" }}</small></p>
           <p><small>推荐人： {{#if parent.username }} {{ parent.username }} {{else}} 星客万维 {{/if}}</small></p>
           {{#if customer.isAffiliate }}<p><small style='color:red'>恭喜你已经成为供应商</small></p>{{/if}}
        </div>
     </div>
   </div>
   <div class='row'>
     <div class="item total col-xs-12">
        <div style="width:100%;">
           <div style="width:50%;">消费总额：￥{{ customer.orderTotal }}</div>
           <div style="width:50%;">分销收入：￥{{ customer.salary }}</div>
        </div>
     </div>
   </div>
   <div class="page cell">
    <div class="bd">
      <div class="weui_cells weui_cells_access">
        <a class="weui_cell" href="/myticket/{{ toHex customer.id }}">
          <div class="weui_cell_hd">
            <i style="color: brown;" class="icon-left glyphicon glyphicon-qrcode"></i>
          </div>
          <div class="weui_cell_bd weui_cell_primary">
              <p>我的二维码</p>
          </div>
          <div class="weui_cell_ft"></div>
        </a>
        <a class="weui_cell" data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
          <div class="weui_cell_hd">
            <i style="color: green;" class="icon-left glyphicon glyphicon-user"></i>
          </div>
          <div class="weui_cell_bd weui_cell_primary">
              <p>我的会员</p>
          </div>
          <div class="weui_cell_ft item customer"><em>{{ sum }}人</em></div>
        </a>
        <div id="collapseOne" class="col-xs-12 panel-collapse collapse">
          <div class="panel-body" style="padding: 10px; background-color: #ffffff;">
            {{#each result }}
              <a href="/myslaves?depth={{ @index }}">
                <div class="weui_cell">
                  <div class="weui_cell_hd">
                    <i class="icon-left glyphicon glyphicon-user" ></i>
                  </div>
                  <div class="weui_cell_bd weui_cell_primary">
                      <p>{{ name }}</p>
                  </div>
                  <div class="weui_cell_ft">
                    <span class="badge pull-right orange-bg">{{ count }}</span>
                  </div>
                </div>
              </a>
            {{/each}}
          </div>
        </div>
        <a class="weui_cell" href="/salary">
          <div class="weui_cell_hd">
            <i style="color: orange;" class="icon-left glyphicon glyphicon-usd"></i>
          </div>
          <div class="weui_cell_bd weui_cell_primary">
              <p>我的收入</p>
          </div>
          <div class="weui_cell_ft"></div>
        </a>
        <a {{ applylimit customer.salary "weui_cell" }}>
          <div class="weui_cell_hd">
            <i style="color: blue;" class="icon-left glyphicon glyphicon-log-out"></i>
          </div>
          <div class="weui_cell_bd weui_cell_primary">
              <p>佣金提现</p>
          </div>
          <div class="weui_cell_ft"></div>
        </a>
        <a class="weui_cell" href="/withdrawals">
          <div class="weui_cell_hd">
            <i style="color: red;" class="icon-left glyphicon glyphicon-duplicate"></i>
          </div>
          <div class="weui_cell_bd weui_cell_primary">
              <p>提现记录</p>
          </div>
          <div class="weui_cell_ft"></div>
        </a>
      </div>
    </div>
   </div>
</div>

{{> alertmodal }}